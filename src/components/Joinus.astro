---
const { t } = Astro.props;

const cards = [
  {
    title: t("joinus.card1.title"),
    description: t("joinus.card1.description"),
    image: "/images/baticon.webp",
    alt: "batter",
  },
  {
    title: t("joinus.card2.title"),
    description: t("joinus.card2.description"),
    image: "/images/catchicon.png",
    alt: "catcher",
  },
];
---

<section id="joinus" class="mx-auto max-w-screen-xl mt-8 py-8">
  <h2 class="text-2xl font-semibold text-gray-900 sm:text-3xl text-center">
    {t("joinus")}
  </h2>
  <div class="mx-3 lg:mx-0 grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-8 mt-4">
    {
      cards.map((card) => {
        return (
          <article class="rounded-lg border border-gray-100 bg-white p-4 shadow-xs transition hover:shadow-lg sm:p-6">
            <img
              src={card.image}
              width="80"
              height="80"
              alt={card.alt}
              class="mx-auto"
            />

            <h3 class="mt-0.5 text-lg font-medium text-gray-900">
              {card.title}
            </h3>

            <p class="mt-2 text-sm/relaxed text-gray-500">{card.description}</p>

            <a
              href="#contact-us"
              class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600"
            >
              {t("contactus")}
              <span
                aria-hidden="true"
                class="block transition-all group-hover:ms-0.5 rtl:rotate-180"
              >
                &rarr;
              </span>
            </a>
          </article>
        );
      })
    }
  </div>
</section>
